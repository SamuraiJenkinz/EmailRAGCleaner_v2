  "scoringProfiles": [
    {
      "name": "email-relevance-profile",
      "text": {
        "weights": {
          "title": 3.0,
          "content": 2.0,
          "sender_name": 1.5,
          "people": 1.2,
          "organizations": 1.2
        }
      },
      "functions": [
        {
          "type": "magnitude",
          "fieldName": "content_quality_score",
          "boost": 2.0,
          "parameters": {
            "boostingRangeStart": 0.7,
            "boostingRangeEnd": 1.0,
            "constantBoostBeyondRange": false
          }
        },
        {
          "type": "freshness",
          "fieldName": "sent_date",
          "boost": 1.5,
          "parameters": {
            "boostingDuration": "P30D"
          }
        }
      ]
    }
  ],
  "corsOptions": {
    "allowedOrigins": ["*"],
